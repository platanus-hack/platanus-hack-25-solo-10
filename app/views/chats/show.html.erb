<p style="color: green"><%= notice %></p>

<%= turbo_stream_from "chat_#{@chat.id}" %>

<% content_for :title, "Chat" %>

<div class="max-w-4xl mx-auto p-6 bg-white">
  <h1 class="text-2xl font-bold text-[var(--color-deep-space-blue)]">Chat <%= @chat.id %></h1>

  <p class="text-[var(--color-deep-space-blue)] opacity-80 mt-2">Using <strong><%= @chat.model.name %></strong></p>

<div id="messages">
  <% @chat.messages.where.not(id: nil).each do |message| %>
    <%= render message %>
  <% end %>
</div>

  <div class="mt-8">
    <%= render "messages/form", chat: @chat, message: @message %>
  </div>

  <div class="mt-6">
    <%= link_to "Back to chats", chats_path, class: "text-[var(--color-yale-blue)] hover:opacity-80 underline" %>
  </div>
</div>