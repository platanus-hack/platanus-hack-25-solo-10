<%= form_with(model: video_transcription, url: video_transcriptions_path) do |form| %>
  <% if video_transcription.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-4">
      <h2 class="text-red-800 font-semibold mb-2">
        <%= pluralize(video_transcription.errors.count, "error") %> prohibió guardar esta video transcription:
      </h2>

      <ul class="list-disc list-inside text-red-700">
        <% video_transcription.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :url, "URL del video:", class: "block text-sm font-medium text-[var(--color-deep-space-blue)] mb-2" %>
    <%= form.url_field :url,
        class: "w-full max-w-2xl px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--color-yale-blue)] focus:border-[var(--color-yale-blue)]",
        placeholder: "https://youtube.com/watch?v=...",
        autofocus: true,
        required: true %>
    <p class="mt-1 text-sm text-[var(--color-deep-space-blue)] opacity-70">Ingresa la URL del video que deseas descargar y transcribir</p>
  </div>

  <div class="mb-4">
    <%= form.label :initial_question, "Pregunta inicial:", class: "block text-sm font-medium text-[var(--color-deep-space-blue)] mb-2" %>
    <%= form.text_field :initial_question,
        class: "w-full max-w-2xl px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--color-yale-blue)] focus:border-[var(--color-yale-blue)]",
        placeholder: "¿Qué te gustaría saber sobre este video?",
        required: true %>
  </div>

  <div>
    <%= form.submit "Crear Video Transcription", class: "px-6 py-2 bg-[var(--color-yale-blue)] text-white rounded-lg hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-[var(--color-yale-blue)] focus:ring-offset-2 cursor-pointer" %>
  </div>
<% end %>

