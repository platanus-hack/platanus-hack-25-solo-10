<p style="color: green"><%= notice %></p>

<% content_for :title, "Video Transcriptions" %>

<div class="max-w-6xl mx-auto p-6">
  <h1 class="text-2xl font-bold text-red-500 mb-6">Video Transcriptions</h1>

  <% if @video_transcriptions.any? %>
    <div id="video_transcriptions">
      <% @video_transcriptions.each do |video_transcription| %>
        <%= render video_transcription %>
        <div class="mb-4">
          <%= link_to "Ver detalles", video_transcription, class: "text-blue-600 hover:text-blue-800 underline" %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-gray-50 border border-gray-200 rounded-lg p-8 text-center">
      <p class="text-gray-600">No hay video transcriptions disponibles.</p>
    </div>
  <% end %>
</div>

