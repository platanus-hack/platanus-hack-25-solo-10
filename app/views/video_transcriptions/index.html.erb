<p style="color: green"><%= notice %></p>

<% content_for :title, "Video Transcriptions" %>

<div class="max-w-6xl mx-auto p-6 bg-white">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-[var(--color-deep-space-blue)]">Video Transcriptions</h1>
    <%= link_to "Nueva Video Transcription", new_video_transcription_path, class: "px-4 py-2 bg-[var(--color-yale-blue)] text-white rounded-lg hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-[var(--color-yale-blue)] focus:ring-offset-2" %>
  </div>

  <% if @video_transcriptions.any? %>
    <div id="video_transcriptions">
      <% @video_transcriptions.each do |video_transcription| %>
        <%= render video_transcription %>
        <div class="mb-4 flex gap-4 items-center">
          <%= link_to "Ver detalles", video_transcription, class: "text-[var(--color-yale-blue)] hover:opacity-80 underline" %>
          <%= button_to "Eliminar", video_transcription, method: :delete,
              class: "px-3 py-1 text-sm bg-[var(--color-strawberry-red)] text-white rounded hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-[var(--color-strawberry-red)] focus:ring-offset-2",
              data: { turbo_confirm: "¿Estás seguro de que deseas eliminar este video transcription?" } %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white border border-gray-200 rounded-lg p-8 text-center">
      <p class="text-[var(--color-deep-space-blue)]">No hay video transcriptions disponibles.</p>
    </div>
  <% end %>
</div>

