<p style="color: green"><%= notice %></p>

<%= turbo_stream_from @video_transcription %>

<% content_for :title, "Video Transcription" %>

<div class="max-w-4xl mx-auto p-6">
  <h1 class="text-2xl font-bold text-red-500 mb-4">Video Transcription #<%= @video_transcription.id %></h1>

  <%= render "content", video_transcription: @video_transcription %>

  <div class="mt-6 flex gap-4">
    <%= link_to "Volver", video_transcriptions_path, class: "text-blue-600 hover:text-blue-800 underline" %>
    <%= button_to "Eliminar", @video_transcription, method: :delete,
        class: "px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2",
        data: { turbo_confirm: "¿Estás seguro de que deseas eliminar este video transcription?" } %>
  </div>
</div>

