<% content_for :title, "Chekia" %>

<div class="min-h-screen flex flex-col items-center justify-center px-4 py-8 bg-white">
  <!-- Logo -->
  <h1 class="text-5xl md:text-6xl text-[var(--color-yale-blue)] mb-8 text-center" style="font-family: var(--font-logo);">
    Chekia
  </h1>

  <!-- URL Form -->
  <div class="w-full max-w-md mb-8">
    <%= form_with(model: @video_transcription, url: video_transcriptions_path, local: true, class: "w-full") do |form| %>
      <% if @video_transcription.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-4">
          <ul class="list-disc list-inside text-red-700 text-sm">
            <% @video_transcription.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.url_field :url,
            class: "w-full px-4 py-3 text-base border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--color-yale-blue)] focus:border-[var(--color-yale-blue)] outline-none",
            placeholder: "Pega la URL del video aquí",
            autofocus: true,
            required: true,
            autocomplete: "url" %>
      </div>

      <div class="mb-4">
        <%= form.text_field :initial_question,
            class: "w-full px-4 py-3 text-base border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--color-yale-blue)] focus:border-[var(--color-yale-blue)] outline-none",
            placeholder: "¿Qué te gustaría saber sobre este video?",
            required: true %>
      </div>

      <p class="text-sm text-gray-600 mb-4 text-center">
        Funciona con YouTube, Instagram o TikTok
      </p>

      <div class="w-full">
        <%= form.submit "Verificar Video", class: "w-full px-6 py-3 bg-[var(--color-yale-blue)] text-white text-base font-semibold rounded-lg hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-[var(--color-yale-blue)] focus:ring-offset-2 cursor-pointer transition-opacity" %>
      </div>
    <% end %>
  </div>
</div>

