        <%= form.text_field :initial_question,
            class: "w-full px-4 py-3 text-base border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--color-yale-blue)] focus:border-[var(--color-yale-blue)] outline-none",
            placeholder: "Â¿QuÃ© te gustarÃ­a saber sobre este video?",
            required: true %>
      </div>

      <div class="w-full mb-4">
        <%= form.submit "Comenzar  ðŸ‘‰", class: "w-full px-6 py-3 bg-[var(--color-yale-blue)] text-white text-base font-semibold rounded-lg hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-[var(--color-yale-blue)] focus:ring-offset-2 cursor-pointer transition-opacity" %>
      </div>

