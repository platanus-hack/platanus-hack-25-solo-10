<div class="flex flex-col gap-1 items-start font-mono mt-2">
  <% message.tool_calls.each do |tool_call| %>
    <div class="bg-white border border-gray-200 px-3 py-2 rounded text-[var(--color-deep-space-blue)] text-sm">
      <%= tool_call.name %>(<%= tool_call.arguments.map { |k, v| "#{k}: #{v.inspect}" }.join(", ") %>)
    </div>
  <% end %>
</div>