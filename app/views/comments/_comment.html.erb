<div id="<%= dom_id(comment) %>" class="mb-4 flex items-start gap-3">
  <div class="flex-shrink-0">
    <div class="w-10 h-10 rounded-full <%= comment.agent_color %> flex items-center justify-center text-white font-bold text-sm shadow-sm">
      <%= comment.agent_name[0] %>
    </div>
  </div>
  <div class="flex-1 min-w-0">
    <div class="flex items-baseline gap-2 mb-1">
      <span class="font-semibold text-gray-900 text-sm"><%= comment.agent_name %></span>
      <span class="text-xs text-gray-500"><%= comment.created_at.strftime("%H:%M") %></span>
    </div>
    <div class="bg-white border border-gray-200 rounded-2xl rounded-tl-sm px-4 py-2.5 text-gray-900 whitespace-pre-wrap shadow-sm">
      <%= comment.content %>
    </div>
  </div>
</div>

