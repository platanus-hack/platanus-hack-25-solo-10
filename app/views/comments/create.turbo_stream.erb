<% if @comment.persisted? %>
  <%= turbo_stream.append "comments_#{@video_transcription.id}" do %>
    <%= render 'comments/comment', comment: @comment %>
  <% end %>
<% end %>

<%= turbo_stream.replace "new_comment" do %>
  <%= render 'comments/form', video_transcription: @video_transcription, comment: @comment.persisted? ? @video_transcription.comments.build(agent: 'user') : @comment %>
<% end %>

